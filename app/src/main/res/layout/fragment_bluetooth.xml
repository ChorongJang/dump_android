<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bluetooth"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/menuBackground"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="드론과 블루투스를 연결하는 메뉴입니다. 본 앱은 블루투스 4.0 이상버전을 지원하며 (주)에어로다인 제품 외에 사용 시 올바르게 동작하지 않을 수 있습니다."
        android:id="@+id/tv_bluetooth_des" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="블루투스 검색"
        android:id="@+id/btn_bluetooth_search" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:id="@+id/listView" />


</LinearLayout>