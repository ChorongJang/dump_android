<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/setGroup_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_bar"
        android:weightSum="3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <com.example.dron.Component.View_MenuButton
            android:id="@+id/btn_menu0"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"/>

        <com.example.dron.Component.View_MenuButton
            android:id="@+id/btn_menu1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"/>

        <com.example.dron.Component.View_MenuButton
            android:id="@+id/btn_menu2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setGroup_1"
        android:weightSum="3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="5dp">

        <com.example.dron.Component.View_MenuButton
            android:id="@+id/btn_menu3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>